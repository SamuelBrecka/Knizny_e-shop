@page "/reviews"

<h3>Recenzie</h3>

<div class="review-list">
    @foreach (var review in Reviews)
    {
        <div class="review-item">
            <h4>@review.Author</h4>
            <p>@review.Comment</p>
            <small>@review.Date.ToShortDateString()</small>
        </div>
    }
</div>

@code {
    private List<Review> Reviews = new List<Review>
    {
        new Review { Author = "GazorPink", Comment = "Féra oliva Jinha", Date = new DateTime(2015, 1, 24) },
        new Review { Author = "gene", Comment = "da na celkem", Date = new DateTime(2015, 1, 24) }
    };

    public class Review
    {
        public string Author { get; set; }
        public string Comment { get; set; }
        public DateTime Date { get; set; }
    }
}